<system>
	<emitters>
		<emitcontinuously>
			<delay_min>0.001</delay_min>
			<delay_max>0.008</delay_max>
			<duration>-1</duration>
		</emitcontinuously>
	</emitters>
	
	<initializers>
		<initsphere>
			<distance_min>100</distance_min>
			<distance_max>160</distance_max>
			<velocity_min>100</velocity_min>
			<velocity_max>150</velocity_max>
			<velocity_exponent>1.5</velocity_exponent>
			<ratio>1.35</ratio>
		</initsphere>
		
		<initsizerandom>
			<size_min>0.4</size_min>
			<size_max>0.8</size_max>
		</initsizerandom>
		
		<initlengthrandom>
			<length_min>0.1</length_min>
			<length_max>0.11</length_max>
		</initlengthrandom>
		
		<initlifetimerandom>
			<lifetime_min>0.4</lifetime_min>
			<lifetime_max>0.9</lifetime_max>
		</initlifetimerandom>
	</initializers>
	
	<operators>
		<oplifetimedecay>
		</oplifetimedecay>
		
		<opalphafade>
			<lifetimefraction_min>0</lifetimefraction_min>
			<lifetimefraction_max>0.5</lifetimefraction_max>
			<alpha_min>0</alpha_min>
			<alpha_max>1</alpha_max>
			<exponent>1</exponent>
		</opalphafade>
		
		<opalphafade>
			<lifetimefraction_min>0.5</lifetimefraction_min>
			<lifetimefraction_max>1</lifetimefraction_max>
			<alpha_min>1</alpha_min>
			<alpha_max>0</alpha_max>
			<exponent>1</exponent>
		</opalphafade>
		
		<opmovement>
			<drag>-0.05</drag>
		</opmovement>
		
		<opsizescale>
			<lifetimefraction_min>0</lifetimefraction_min>
			<lifetimefraction_max>1</lifetimefraction_max>
			<size_min>0</size_min>
			<size_max>2</size_max>
			<exponent>2</exponent>
		</opsizescale>
		
		<oplengthscale>
			<lifetimefraction_min>0</lifetimefraction_min>
			<lifetimefraction_max>1</lifetimefraction_max>
			<length_min>0</length_min>
			<length_max>2</length_max>
			<exponent>2</exponent>
		</oplengthscale>
	</operators>
	
	<renderers>
		<drawline>
			<screenspace_position>true</screenspace_position>
			<fadeout>true</fadeout>
		</drawline>
	</renderers>
</system>