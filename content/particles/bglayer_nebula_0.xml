<system>
	<emitters>
		<emitcontinuously>
			<delay_min>8</delay_min>
			<delay_max>35</delay_max>
			<initial_delay_min>5</initial_delay_min>
			<initial_delay_max>15</initial_delay_max>
			<duration>-1</duration>
		</emitcontinuously>
	</emitters>
	
	<initializers>
		<initsphere>
			<distance_min>0</distance_min>
			<distance_max>250</distance_max>
			<velocity_min>0</velocity_min>
			<velocity_max>0</velocity_max>
			<velocity_exponent>1</velocity_exponent>
		</initsphere>
		
		<initsizerandom>
			<size_min>300</size_min>
			<size_max>400</size_max>
		</initsizerandom>
		
		<initanglerandom>
			<angle_min>0</angle_min>
			<angle_max>360</angle_max>
		</initanglerandom>
		
		<initlifetimerandom>
			<lifetime_min>10</lifetime_min>
			<lifetime_max>12</lifetime_max>
		</initlifetimerandom>
		
		<initvelocityrandom>
			<velocity_min_x>-130</velocity_min_x>
			<velocity_max_x>-130</velocity_max_x>
			<velocity_min_y>0</velocity_min_y>
			<velocity_max_y>0</velocity_max_y>
		</initvelocityrandom>
	</initializers>
	
	<operators>
		<oplifetimedecay>
		</oplifetimedecay>
		
		<opalphafade>
			<lifetimefraction_min>0</lifetimefraction_min>
			<lifetimefraction_max>0.2</lifetimefraction_max>
			<alpha_min>0</alpha_min>
			<alpha_max>1</alpha_max>
			<exponent>1</exponent>
		</opalphafade>
		
		<opalphafade>
			<lifetimefraction_min>0.8</lifetimefraction_min>
			<lifetimefraction_max>1</lifetimefraction_max>
			<alpha_min>1</alpha_min>
			<alpha_max>0</alpha_max>
			<exponent>1</exponent>
		</opalphafade>
		
		<opmovement>
			<drag>0</drag>
			<angulardrag>0.05</angulardrag>
		</opmovement>
	</operators>
	
	<renderers>
		<drawmaterial>
			<screenspace_position>true</screenspace_position>
			<material>nebula/nebula_0</material>
			<material>nebula/nebula_1</material>
			<material>nebula/nebula_2</material>
			<material>nebula/nebula_3</material>
			<material>nebula/nebula_4</material>
		</drawmaterial>
	</renderers>
</system>