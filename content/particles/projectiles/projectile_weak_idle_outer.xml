<system>
	<emitters>
		<emitcontinuously>
			<delay_min>0.04</delay_min>
			<delay_max>0.05</delay_max>
			<duration>-1</duration>
		</emitcontinuously>
	</emitters>
	
	<initializers>
		<initsphere>
			<distance_min>0</distance_min>
			<distance_max>1</distance_max>
			<velocity_min>0</velocity_min>
			<velocity_max>0</velocity_max>
			<velocity_exponent>1</velocity_exponent>
		</initsphere>
		
		<initsizerandom>
			<size_min>20</size_min>
			<size_max>35</size_max>
			<exponent>2</exponent>
		</initsizerandom>
		
		<initanglerandom>
			<angle_min>0</angle_min>
			<angle_max>360</angle_max>
		</initanglerandom>
		
		<initlifetimerandom>
			<lifetime_min>0.03</lifetime_min>
			<lifetime_max>0.05</lifetime_max>
		</initlifetimerandom>
	</initializers>
	
	<operators>
		<oplifetimedecay>
		</oplifetimedecay>
		
		<opnoise>
			<noise_min>0.5</noise_min>
			<noise_max>0.5</noise_max>
			<field>alpha</field>
		</opnoise>
		
		<opalphafade>
			<lifetimefraction_min>0</lifetimefraction_min>
			<lifetimefraction_max>0.5</lifetimefraction_max>
			<alpha_min>0</alpha_min>
			<alpha_max>0.5</alpha_max>
			<exponent>1</exponent>
		</opalphafade>
		
		<opalphafade>
			<lifetimefraction_min>0.5</lifetimefraction_min>
			<lifetimefraction_max>1</lifetimefraction_max>
			<alpha_min>0.5</alpha_min>
			<alpha_max>0</alpha_max>
			<exponent>1</exponent>
		</opalphafade>
		
		<oposcillate>
			<oscillate_min>0.5</oscillate_min>
			<oscillate_max>1</oscillate_max>
			<speed>15</speed>
			<exponent>3</exponent>
			<field>alpha</field>
		</oposcillate>
		
		<oplocktosystemorigin />
	</operators>
	
	<renderers>
		<drawmaterial>
			<material>effects/glow_0_red</material>
		</drawmaterial>
	</renderers>
</system>