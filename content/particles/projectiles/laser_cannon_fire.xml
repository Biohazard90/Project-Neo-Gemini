			<alpha_max>0.2</alpha_max>
			<exponent>1</exponent>
		</opalphafade>
		
		<opmovement>
			<drag>-0.001</drag>
		</opmovement>
		
		<opsizescale>
			<lifetimefraction_min>0</lifetimefraction_min>
			<lifetimefraction_max>1</lifetimefraction_max>
			<size_min>1</size_min>
			<size_max>0</size_max>
			<exponent>2</exponent>
		</opsizescale>
		
		<oplocktosystemorigin />
	</operators>
	
	<renderers>
		<drawmaterial>
			<material>effects/glow_0_green_1</material>
		</drawmaterial>
	</renderers>
	
	<children>
		<child>projectiles/laser_cannon_fire_sub_0.xml</child>
	</children>
