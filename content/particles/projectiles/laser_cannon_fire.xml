<system>
	<emitters>
		<emitcontinuously>
			<delay_min>0.005</delay_min>
			<delay_max>0.008</delay_max>
			<duration>0.4</duration>
		</emitcontinuously>
	</emitters>
	
	<initializers>
		<initsphere>
			<distance_min>1</distance_min>
			<distance_max>6</distance_max>
			<velocity_min>0</velocity_min>
			<velocity_max>0</velocity_max>
			<velocity_exponent>1</velocity_exponent>
		</initsphere>
		
		<initsizerandom>
			<size_min>10</size_min>
			<size_max>30</size_max>
		</initsizerandom>
		
		<initlifetimerandom>
			<lifetime_min>0.1</lifetime_min>
			<lifetime_max>0.4</lifetime_max>
			<exponent>1</exponent>
		</initlifetimerandom>
		
		<initvelocityrandom>
			<velocity_min_x>100</velocity_min_x>
			<velocity_max_x>1200</velocity_max_x>
