<system>
	<emitters>
		<emitcontinuously>
			<delay_min>0.01</delay_min>
			<delay_max>0.012</delay_max>
			<duration>0.4</duration>
		</emitcontinuously>
	</emitters>
	
	<initializers>
		<initsphere>
			<distance_min>80</distance_min>
			<distance_max>80</distance_max>
			<velocity_min>-260</velocity_min>
			<velocity_max>-260</velocity_max>
			<velocity_exponent>1</velocity_exponent>
		</initsphere>
		
		<initsizerandom>
			<size_min>1</size_min>
			<size_max>3</size_max>
		</initsizerandom>
		
		<initlifetimerandom>
			<lifetime_min>0.3</lifetime_min>
			<lifetime_max>0.3</lifetime_max>
			<exponent>1</exponent>
		</initlifetimerandom>
	</initializers>
	
	<operators>
		<oplifetimedecay>
		</oplifetimedecay>
		
		<opalphafade>
			<lifetimefraction_min>0</lifetimefraction_min>
			<lifetimefraction_max>0.1</lifetimefraction_max>
			<alpha_min>0</alpha_min>
			<alpha_max>1</alpha_max>
			<exponent>1</exponent>
		</opalphafade>
		
		<opmovement>
			<drag>-0.001</drag>
		</opmovement>
		
		<opsizescale>
			<lifetimefraction_min>0</lifetimefraction_min>
			<lifetimefraction_max>1</lifetimefraction_max>
			<size_min>0</size_min>
			<size_max>15</size_max>
			<exponent>2</exponent>
		</opsizescale>
		
		<oplocktosystemorigin />
	</operators>
	
	<renderers>
		<drawmaterial>
			<material>effects/glow_0_green_1</material>
		</drawmaterial>
	</renderers>
</system>