<system>
	<emitters>
		<emitcontinuously>
			<delay_min>0.1</delay_min>
			<delay_max>0.5</delay_max>
			<duration>-1</duration>
		</emitcontinuously>
	</emitters>
	
	<initializers>
		<initsphere>
			<distance_min>0</distance_min>
			<distance_max>250</distance_max>
			<velocity_min>0</velocity_min>
			<velocity_max>0</velocity_max>
			<velocity_exponent>1</velocity_exponent>
		</initsphere>
		
		<initsizerandom>
			<size_min>30</size_min>
			<size_max>50</size_max>
		</initsizerandom>
		
		<initanglerandom>
			<angle_min>0</angle_min>
			<angle_max>360</angle_max>
		</initanglerandom>
		
		<initangularvelocityrandom>
			<angularvelocity_min>10</angularvelocity_min>
			<angularvelocity_max>1000</angularvelocity_max>
			<flipdirection>true</flipdirection>
		</initangularvelocityrandom>
		
		<initlifetimerandom>
			<lifetime_min>1</lifetime_min>
			<lifetime_max>5</lifetime_max>
		</initlifetimerandom>
		
		<initvelocityrandom>
			<velocity_min_x>-50</velocity_min_x>
			<velocity_max_x>-30</velocity_max_x>
			<velocity_min_y>0</velocity_min_y>
			<velocity_max_y>0</velocity_max_y>
		</initvelocityrandom>
	</initializers>
	
	<operators>
		<oplifetimedecay>
		</oplifetimedecay>
		
		<opalphafade>
			<lifetimefraction_min>0</lifetimefraction_min>
			<lifetimefraction_max>0.4</lifetimefraction_max>
			<alpha_min>0</alpha_min>
			<alpha_max>1</alpha_max>
			<exponent>1</exponent>
		</opalphafade>
		
		<opalphafade>
			<lifetimefraction_min>0.6</lifetimefraction_min>
			<lifetimefraction_max>1</lifetimefraction_max>
			<alpha_min>1</alpha_min>
			<alpha_max>0</alpha_max>
			<exponent>1</exponent>
		</opalphafade>
		
		<opmovement>
			<drag>0</drag>
			<angulardrag>0.05</angulardrag>
		</opmovement>
	</operators>
	
	<renderers>
		<drawmaterial>
			<screenspace_position>true</screenspace_position>
			<material>planets/planet_0</material>
			<material>planets/planet_1</material>
			<material>planets/planet_2</material>
		</drawmaterial>
	</renderers>
</system>